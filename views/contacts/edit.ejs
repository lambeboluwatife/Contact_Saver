<%- include ('../partials/header') %>
    <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Edit <%= contact.name %>'s Contact Info</h1>
        <%- include ('../partials/messages') %>
        <form action="/contacts/<%= contact._id %>?_method=PUT" method="POST">

          <div class="form-group">
            <label for="name">Enter Contact Name</label>
            <input
            type="text"
            id="name"
            name="contact[name]"
            class="form-control"
            value="<%= contact.name %>"
            />
          </div>

          <div class="form-group">
            <label for="address">Contact Address</label>
            <input
            type="text"
            id="address"
            name="contact[address]"
            class="form-control"
            value="<%= contact.address %>"
            />
          </div>

          <div class="form-group">
            <label for="tel">Contact Phone Number</label>
            <input
            type="text"
            id="tel"
            name="contact[tel]"
            class="form-control"
            value="<%= contact.tel %>"
            />
          </div>

          <!-- <div class="form-group">
            <label for="contactType">Contact Type</label>
            <select class="form-control" name="contactType">
              <option value="home" selected>Home</option>
              <option value="office">Office</option>
              <option value="business">Business</option>
              <option value="company">Company</option>
            </select>
          </div> -->

          <div class="form-group">
            <label for="email">Contact Email</label>
            <input
            type="email"
            id="email"
            name="contact[email]"
            class="form-control"
            value="<%= contact.email %>"
            />
          </div>

          <button type="submit" class="btn btn-primary btn-block">Edit</button>
        </form>
        <a href="/contacts">Back</a>
      </div>
    </div>

    <hr>

    </div>

<%- include ('../partials/footer') %>
